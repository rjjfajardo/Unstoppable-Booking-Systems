  <script>
    let minPrice = 0;
    let maxPrice = 0;

    $("#search_btn").click(function(){
      sessionStorage.setItem("min_price", minPrice);
      sessionStorage.setItem("max_price", maxPrice);
      sessionStorage.setItem("car_type", $("#type_val").val());
   
    });

    $("#rangePrimary").ionRangeSlider({
      type: "double",
      grid: true,
      min: 0,
      max: 10000,
      from: 0,
      to: 0,
      skin: "round",
      prefix: "₱"
    });

    $("#rangePrimary").on("change", function () {
    var $this = $(this),
        value = $this.prop("value").split(";");
        minPrice = value[0];
        maxPrice = value[1];
    });

  </script>
