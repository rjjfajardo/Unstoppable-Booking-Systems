  <script>
    const content = document.querySelector('.content');

    $(document).ready(function() {
      let img_source = sessionStorage.getItem("img");
      let detail_title = sessionStorage.getItem("detail_title");
      let detail_specs = JSON.parse(sessionStorage.getItem("detail_specs"));

      $("#img0").attr("src", img_source);
      for (let i=0; i < 3; i++) {
        $("#img" + (i + 1)).attr("src", img_source);
      }
      $("img").click(function() {
        zoom(this.id);
      });

      $("#title").text(detail_title);
      $("#description").text("You can add here your description.");

      for (let j = 0; j < detail_specs.length; j++) {
        let spec_li = document.createElement('li');
        spec_li.innerText = detail_specs[j];
        $("#specs").append(spec_li);
      }

    });

    //RESIZE
    $(window).resize(function () {
      var viewportWidth = $(window).width();
      if (viewportWidth < 993) {
        $(".side_bar_img").addClass('d-flex');
        $(".side_bar_img").addClass('pt-5');
      } else {
        $(".side_bar_img").removeClass('d-flex');
        $(".side_bar_img").removeClass('pt-5');
      }
    });
    //MODAL
    function zoom(img_id) {
      let modal = $("#myModal");
      let img = document.getElementById(img_id);
      let modalImg = $("#img01");
      $(".close").click(function() {
        modal.css("display", "none");
      });
      modal.css("display", "block");
      modalImg.attr('src', img.src);
    }
  </script>
