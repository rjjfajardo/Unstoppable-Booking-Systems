<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head'); %>
</head>
<body class="rs-body-log">

    <div class="row align-items-center log-wrap zoom-load">
        <div class="col-md-5 log-img-col">
            <div class="log-form-img"></div>
        </div>
        <div class="col-md-7 rs-form">
            <div>
                <% if(errors != "") { %>
                    <% errors.forEach((item) => { %>
                        <div class="alert alert-danger">
                            <%- item %>
                        </div>
                    <% }); %>
                <% } %>
            </div> 
            <form method="POST" action="/login">
                <hr>
                <div class="form-group">
                    <i class="bi bi-person-circle"></i>
                    <label for="email">Email address:</label>
                    <input type="email" class="form-control" id="email" name="email"  placeholder="Enter email" required>
                </div>
                <div class="form-group">
                    <i class="bi bi-lock-fill"></i>
                    <label for="password">Password:</label>
                    <input type="password" class="form-control" id="password" name="password" placeholder="Password" required>
                </div>
                <div class="btn-blue pb-1">
                    <button type="submit" class="btn">Log in</button>
                </div>
            </form>

            <hr>
            <div class="no-account">
                <span>Don't have an account? <a href="/register">Create a new account</a>.</span>
            </div>
        
        </div>
    </div>
    
    <%- include('../partials/footer'); %>
    
</body>
</html>
